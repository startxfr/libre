#!/bin/bash

#source /usr/local/lib/libre-core

export USER=student
export HOME=/home/$USER
export HOMEVNC=/home/$USER/.vnc
export DISPLAYNUM=3
export DISPLAY=:$DISPLAYNUM

function startVNC {
  isStartedVNC
  if [[ "$?" -eq 0 ]] ; then
      sudo -u $USER /usr/bin/vncserver $DISPLAY -geometry 1024x768 -depth 16 -passwordfile $HOMEVNC/passwd -xstartup $HOMEVNC/xstartup
  fi
}

function stopVNC {
  if [[ $1 != "" ]] ; then
      sudo -u $USER /usr/bin/vncserver -kill $1
  else
      sudo -u $USER /usr/bin/vncserver -kill $DISPLAY
  fi
  sudo rm -rf /tmp/.X$DISPLAYNUM-lock
}

function statusVNC {
  if [[ $1 != "" ]] ; then
      sudo -u $USER /usr/bin/vncserver -list $1
  else
      sudo -u $USER /usr/bin/vncserver -list
  fi
}

function isStartedVNC {
  sudo -u $USER /usr/bin/vncserver -list | grep $DISPLAY &> /dev/null
  if [[ "$?" -eq 0 ]] ; then
      return 1
  fi
  return 0
}

# Dispatch input arguments
case $1 in
    start)                  startVNC;;
    stop)                   stopVNC $2;;
    status)                 statusVNC $2;;
esac
